<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="member"
            type="com.batch.labtimecard.model.Member" />
    </data>
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp" >
        <LinearLayout
            android:id="@+id/item_member_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:background="@android:color/darker_gray">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                setImage="@{member.affiliationLabName}"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <TextView
                    android:id="@+id/name_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Name"
                    android:textSize="30dp"
                    android:layout_gravity="center_horizontal"
                    android:text="@{member.name}" />

                <TextView
                    android:id="@+id/affiliation_teaxt_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="所属"
                    android:textSize="30dp"
                    android:layout_gravity="center_horizontal"
                    android:text="@{member.affiliationLabName}" />
            </LinearLayout>

            <TextView
                android:id="@+id/isExisting_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:visible="@{member.name}"
                android:text="研究なう" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>