<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="memberData"
            type="com.batch.labtimecard.model.MemberData" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:id="@+id/item_member_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/offline"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                setImage="@{memberData.member.affiliationLabName}"
                android:layout_width="150dp"
                android:layout_height="150dp"
                tools:src="@drawable/inam_logo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/name_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{memberData.member.name}"
                    android:textAlignment="center"
                    android:textSize="30dp"
                    tools:text="Inamura Hiroshi" />

                <ImageButton
                    android:id="@+id/button_more"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:src="@drawable/ic_more_vert" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>